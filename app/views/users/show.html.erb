<%= render "shared/header"%>
<div class="user_main">
  <div class="inne">
    <div class="user__wrappe">
      <h2 class="page-headng">
        <%= @user.nickname%>さんのプロフィール
      </h2>
      <% if current_user.following?(@user) %>
         <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete,class: "follow-btn" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post,class: "follow-btn" %>
      <% end %>
      <div class="tabl">
            <div class="able__col2"><%= simple_format(@user.profile) %></div>
      </div>
      <h2 class="page-headng">
        <%= @user.nickname%>さんの料理
      </h2>
      <div class='user-contents'>
      <ul class='user-lists'>
          <%= render partial: "shared/item", collection: @user.items %> 
        </ul>
        </div>
    </div>
  </div>
</div>
<%= render "shared/footer"%>